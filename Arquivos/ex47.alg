// Seção de Declarações 
var

soma, contador : real
inicio
// Seção de Comandos 

soma <- 0
contador <- 500

Enquanto (contador >=0) faca
soma <- contador + soma
contador <- contador - 50
FimEnquanto

Escreva("A soma de 500 + 450 + 400 + 350 + 300 + ... + 150 + 50 + 0 é:", soma)


fimalgoritmo
